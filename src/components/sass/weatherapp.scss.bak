* {
    box-sizing: border-box;
}

body, html, #root {
    width: 100%;
    height: 100%;
}

.mainContainer {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    .upContainer {
	min-width: 600px;
	height: 350px;
	display: flex;
	flex-direction: column;
	border: 1px solid #999999;
	border-radius: 5px;
    }

    .top-section {
	flex: 0 0 50%;
    }

    .bottom-section {
	flex: 0 0 50%;
    }
}

